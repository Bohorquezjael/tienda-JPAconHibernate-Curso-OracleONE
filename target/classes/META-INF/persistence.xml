<?xml version="1.0" encoding="UTF-8"?>
<persistance version = "2.2"
xmlns = "http://xlmns.jcp.org/xml/ns/persistance"
xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance">
xsi:schemaLocation = "http://xlmns.jcp.org/xml/ns/persistance http://xlmns.jcp.org/xml/ns/persistance/persistence_2_2.xsd"
<persistence-unit name="tienda" transaction-type="RESOURCE_LOCAL">
    <!-- <class>br.com.alura.tienda.modelo.Producto</class>  -->
    <properties>
        <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:loja"/>
        <property name="javax.persistence.jdbc.user" value="sa"/>
        <property name="javax.persistence.jdbc.password" value=""/>
        <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>	
</persistence-unit>
</persistance>